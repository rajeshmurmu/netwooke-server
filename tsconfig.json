{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2022" /* Latest stable ECMAScript version */,
    "module": "commonjs" /* Standard for Node.js */,
    "lib": ["ES2022"] /* Library features to include */,
    "allowJs": true /* Allow JavaScript files to be compiled */,
    "outDir": "./dist" /* Where the compiled JS goes */,
    "rootDir": "./src" /* Where your TS source code lives */,
    "removeComments": true /* Clean up code for production */,

    /* Strict Type-Checking Options */
    "strict": true /* Enable all strict type-checking options */,
    "noImplicitAny": true /* Error on inferred 'any' types */,
    "strictNullChecks": true /* Essential for preventing crashes */,

    /* Module Resolution Options */
    "moduleResolution": "node" /* How TS finds your modules */,
    "baseUrl": "." /* Root for non-relative module names */,
    "paths": {
      "@src/*": ["src/*"] /* Your custom @src alias */
    },
    "esModuleInterop": true /* Fixes imports for Express/Cors/etc */,
    "skipLibCheck": true /* Speeds up compilation */,
    "forceConsistentCasingInFileNames": true /* Prevents cross-platform file bugs */
  },
  "include": ["src/**/*"] /* Only compile code in src */,
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],

  /* Enables @src alias support for ts-node during development */
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
